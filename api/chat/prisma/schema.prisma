model Lead {
  id           Int         @id @default(autoincrement())
  first_name   String?
  last_name    String?
  phone        String?
  email        String?
  utm_campaign String?
  utm_source   String?
  utm_medium   String?
  campaign_id  String?
  adset_id     String?
  creative_id  String?
  ttclid       String?
  createdAt    DateTime    @default(now())
  // Relation to events
  events       LeadEvent[]
}

model LeadEvent {
  id        Int      @id @default(autoincrement())
  type      String
  detail    String
  createdAt DateTime @default(now())
  leadId    Int?
  lead      Lead?    @relation(fields: [leadId], references: [id])
}